            android:name="es.urjc.etsii.cs.comunio.activities.UserLoginActivity"
            android:label="@string/title_activity_user_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.PlayersActivity"
            android:label="@string/title_section6"
            android:theme="@style/AppTheme.NoActionBar" >
