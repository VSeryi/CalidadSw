        </activity>
        <activity
            android:name=".activities.MarketActivity"
            android:label="@string/title_section4"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.LineupsActivity"
            android:label="@string/title_section3"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.TeamActivity"
            android:label="@string/title_section7"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>
</manifest>
